<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmed.customapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CelebrationActivity"></activity>
        <!-- MainActivity -->
        <activity
            android:name=".MainApp.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity> <!-- MasterActivity -->
        <activity android:name=".MainApp.MasterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- AnimateActivity -->
        <activity android:name=".Test.AnimateActivity" /> <!-- CalculatorActivity -->
        <activity
            android:name=".Calulator.CalculatorActivity"
            android:theme="@style/CalculatorTheme" />
        <activity android:name=".WeActivity" /> <!-- MyAppsActivity -->
        <activity android:name=".MyAppsActivity" /> <!-- fragments container for quran -->
        <activity
            android:name=".QuranKareem.FragmentsContainer"
            android:label="@string/title_activity_test_fragment"
            android:theme="@style/AppTheme.bottomNavigation" /> <!-- QuranKareem OuranSplash -->
        <activity
            android:name=".QuranKareem.OuranSplash"
            android:theme="@style/AppTheme.bottomNavigation" /> <!-- Quran Soura Activity -->
        <activity
            android:name=".QuranKareem.Soura"
            android:theme="@style/AppTheme.SlidrActivityTheme" />

        <activity
            android:name=".MainApp.ShowCaseLibrary.ShowcaseActivity"
            android:theme="@style/ShowcaseTransparentTheme"/>
    </application>

</manifest>