<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuranKareem.Splash"

    app:layoutDescription="@xml/quran_splash_scene"
    android:id="@+id/quran_motion_layout"
    >

    <ImageView
        android:id="@+id/full_background_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quran0"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/quran_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent=".5"
        android:orientation="vertical"
        />

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/left_quran_splash"
        app:layout_constraintEnd_toStartOf="@id/quran_guide_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <ImageView
        android:id="@+id/right_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/right_quran_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/quran_guide_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</androidx.constraintlayout.motion.widget.MotionLayout>