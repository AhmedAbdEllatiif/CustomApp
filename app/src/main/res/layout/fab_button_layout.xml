<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:paddingEnd="30dp"
    android:paddingBottom="30dp"
    android:paddingStart="30dp"
    >


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mic_test"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:fabCustomSize="30dp"
        android:layout_marginBottom="300dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:scaleType="center"
        app:borderWidth="0dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        />


    <TextView
        android:id="@+id/txt_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Mic"
        android:textColor="@color/black"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/fab_mic"
        app:layout_constraintBottom_toBottomOf="@+id/fab_mic"
        app:layout_constraintEnd_toStartOf="@+id/fab_mic"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:fabCustomSize="30dp"
        android:layout_margin="5dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        />


    <TextView
        android:id="@+id/txt_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Camera"
        android:textColor="@color/black"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/fab_cam"
        app:layout_constraintBottom_toBottomOf="@+id/fab_cam"
        app:layout_constraintEnd_toStartOf="@+id/fab_cam"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cam_test"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:fabCustomSize="40dp"
        android:layout_marginBottom="210dp"
        android:src="@android:drawable/ic_menu_camera"
        android:scaleType="center"
        app:borderWidth="0dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:fabCustomSize="40dp"
        android:layout_margin="5dp"
        android:src="@android:drawable/ic_menu_camera"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        />

    <TextView
        android:id="@+id/txt_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Map"
        android:textColor="@color/black"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/fab_map"
        app:layout_constraintBottom_toBottomOf="@+id/fab_map"
        app:layout_constraintEnd_toStartOf="@+id/fab_map"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/map_test"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:fabCustomSize="45dp"
        android:layout_marginBottom="110dp"
        android:src="@android:drawable/ic_dialog_map"
        android:scaleType="center"
        app:borderWidth="0dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_map"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:fabCustomSize="45dp"
        android:layout_margin="5dp"
        android:src="@android:drawable/ic_dialog_map"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:fabCustomSize="55dp"
        android:layout_margin="5dp"
        app:borderWidth="0dp"
        android:src="@drawable/ic_add"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>