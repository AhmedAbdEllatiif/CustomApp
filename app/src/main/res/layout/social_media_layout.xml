<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="4"
    android:gravity="center"
   >

        <ImageView
            android:id="@+id/img_fb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/fb"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_whatsapp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/img_whatsapp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_instagram"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/img_instagram"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_linkedin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/img_linkedin"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_github"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/img_github"
            tools:ignore="ContentDescription" />




</androidx.appcompat.widget.LinearLayoutCompat>